<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sortbytext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="SORT BY :"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <View
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@+id/sortbytext"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/common_gray"></View>

    <LinearLayout
        android:id="@+id/sortby_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/underline"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/stars"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_view"
            android:padding="5dp"
            android:text="Stars" />

        <Button
            android:id="@+id/forks"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_view"
            android:padding="5dp"
            android:text="Forks" />

        <Button
            android:id="@+id/updated"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/round_view"
            android:text="Updated" />
    </LinearLayout>

    <TextView
        android:id="@+id/orderbytext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/sortby_container"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="ORDER BY :"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <View
        android:id="@+id/order_underline"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@+id/orderbytext"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/common_gray"></View>

    <LinearLayout
        android:id="@+id/orderby_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_underline"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/desc"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_view"
            android:padding="5dp"
            android:text="desc" />

        <Button
            android:id="@+id/asc"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_view"
            android:padding="5dp"
            android:text="asc" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/orderby_container"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="apply"
        android:id="@+id/apply"
        android:textColor="@color/white" />
</RelativeLayout>